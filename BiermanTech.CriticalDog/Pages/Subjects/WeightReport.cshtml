@page
@model BiermanTech.CriticalDog.Pages.Subjects.WeightReportModel
@{
    ViewData["Title"] = "Weight Report";
}

<h1>Weight Report for @Model.Report.SubjectName</h1>

@if (Model.Report.Observations.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Weight (kg)</th>
                <th>Trend Between (kg/day)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obs in Model.Report.Observations)
            {
                <tr>
                    <td>@obs.RecordTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@obs.WeightKg</td>
                    <td>
                        @if (obs.TrendBetween.HasValue)
                        {
                            if (obs.TrendBetween > 0)
                            {
                                <span class="text-success">+@(obs.TrendBetween.Value.ToString("F3"))</span>
                            }
                            else if (obs.TrendBetween < 0)
                            {
                                <span class="text-danger">@(obs.TrendBetween.Value.ToString("F3"))</span>
                            }
                            else
                            {
                                <span>0.000</span>
                            }
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Average Rate:</strong> @(Model.Report.AverageRateKgPerDay?.ToString("F3") ?? "N/A") kg/day</p>
    <p><strong>Overall Trend:</strong> @Model.Report.TrendDescription</p>
}
else
{
    <p>@Model.Report.TrendDescription</p>
}

@if (!string.IsNullOrEmpty(ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage))
{
    <div class="alert alert-danger">
        @ModelState[string.Empty].Errors.First().ErrorMessage
    </div>
}

<a asp-page="/Index" class="btn btn-secondary">Back to Home</a>