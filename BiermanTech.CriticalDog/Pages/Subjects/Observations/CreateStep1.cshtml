@page "{dogId:int}"
@model BiermanTech.CriticalDog.Pages.Dogs.Observations.CreateStep1Model
@{
    ViewData["Title"] = "Add Observation - Step 1";
}

<h1>Add Observation for @Model.ObservationVM.SubjectName - Step 1: Select Observation Type</h1>

<form method="post">
    <input type="hidden" asp-for="ObservationVM.SubjectId" />

    <div class="form-group">
        <label asp-for="ObservationVM.ObservationDefinitionId">Observation Type</label>
        <select asp-for="ObservationVM.ObservationDefinitionId" asp-items="Model.ObservationVM.ObservationDefinitions" class="form-control">
            <option value="">-- Select Observation --</option>
        </select>
        <span asp-validation-for="ObservationVM.ObservationDefinitionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Next</button>
    <a asp-page="../Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}