@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Delete Subject";
}

<h1>Delete Subject</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectVM.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectVM.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectVM.Sex)
        </dt>
        <dd class="col-sm-10">
            @(Model.SubjectVM.Sex == 0 ? "Male" : "Female")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectVM.ArrivalDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectVM.ArrivalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectVM.SubjectTypeId)
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectTypeName
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SubjectVM.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>