@page
@model BiermanTech.CriticalDog.Pages.Dogs.IndexModel
@{
    ViewData["Title"] = "Subjects";
}

<h1>Subjects</h1>
<p>
    <a class="btn btn-primary" asp-page="/Subjects/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Sex</th>
            <th>Arrival Date</th>
            <th>
                Meta Tags
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dog in Model.Dogs)
        {
            <tr>
                <td>@dog.Name</td>
                <td>@dog.Breed</td>
                <td>@(dog.Sex == 1 ? "Male" : dog.Sex == 2 ? "Female" : "Unknown")</td>
                <td>@dog.ArrivalDate?.ToShortDateString()</td>
                <td>
                    @(dog.SelectedMetaTagIds.Any() && Model.MetaTagNames.Any() ? string.Join(", ", Model.MetaTagNames[dog.Id]) : "None")
                </td>
                <td>
                    <div class="d-inline-flex align-items-center me-2 non-printable" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group btn-group-sm pe-1" role="group" aria-label="First group">
                            <a class="btn btn-success" asp-page="/Subjects/Observations/CreateStep1" asp-route-dogId="@dog.Id">Observe</a>
                        </div>
                        <div class="btn-group btn-group-sm" role="group" aria-label="Second group">
                            <a class="btn btn-primary" asp-page="/Subjects/Edit" asp-route-id="@dog.Id">Edit</a>
                            <a class="btn btn-info" asp-page="/Subjects/Details" asp-route-id="@dog.Id">Details</a>
                            <a class="btn btn-danger" asp-page="/Subjects/Delete" asp-route-id="@dog.Id">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>