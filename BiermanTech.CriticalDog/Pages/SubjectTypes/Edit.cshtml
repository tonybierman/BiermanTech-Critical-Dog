@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.SubjectTypes.EditModel

@{
    ViewData["Title"] = "Edit Subject Type";
}

<h1>Edit Subject Type</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectTypeVM.Id" />

            <div class="form-group">
                <label asp-for="SubjectTypeVM.TypeName" class="control-label"></label>
                <input asp-for="SubjectTypeVM.TypeName" class="form-control" />
                <span asp-validation-for="SubjectTypeVM.TypeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubjectTypeVM.Description" class="control-label"></label>
                <textarea asp-for="SubjectTypeVM.Description" class="form-control"></textarea>
                <span asp-validation-for="SubjectTypeVM.Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}