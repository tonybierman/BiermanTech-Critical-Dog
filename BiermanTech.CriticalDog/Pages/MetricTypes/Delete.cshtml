@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.MetricTypes.DeleteModel

@{
    ViewData["Title"] = "Delete Metric Type";
}

<h1>Delete Metric Type</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MetricTypeVM.ObservationDefinitionId)
        </dt>
        <dd class="col-sm-9">
            @Model.ObservationDefinitionName
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MetricTypeVM.UnitId)
        </dt>
        <dd class="col-sm-9">
            @Model.UnitName
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MetricTypeVM.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MetricTypeVM.Description)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MetricTypeVM.IsActive)
        </dt>
        <dd class="col-sm-9">
            @(Model.MetricTypeVM.IsActive.HasValue ? (Model.MetricTypeVM.IsActive.Value ? "Active" : "Inactive") : "Not Set")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="MetricTypeVM.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>