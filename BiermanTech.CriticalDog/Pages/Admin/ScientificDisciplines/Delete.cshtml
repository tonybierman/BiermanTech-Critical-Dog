@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.Admin.ScientificDisciplines.DeleteModel

@{
    ViewData["Title"] = "Delete Scientific Discipline";
}

<h1>Delete Scientific Discipline</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DisciplineVM.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DisciplineVM.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DisciplineVM.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DisciplineVM.Description)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DisciplineVM.IsActive)
        </dt>
        <dd class="col-sm-9">
            @(Model.DisciplineVM.IsActive.HasValue ? (Model.DisciplineVM.IsActive.Value ? "Active" : "Inactive") : "Not Set")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DisciplineVM.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>