@page
@model UsersIndexModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", (await UserManager.GetRolesAsync(user)).ToArray())</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Reset Password</a>
                    <a asp-page="ManageAuth" asp-route-id="@user.Id" class="btn btn-sm btn-info">Manage Auth</a>
                </td>
            </tr>
        }
    </tbody>
</table>