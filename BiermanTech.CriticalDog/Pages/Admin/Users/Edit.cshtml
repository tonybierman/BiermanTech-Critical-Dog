@page
@model EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post">
    <input type="hidden" asp-for="Input.Id" />
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Input.IsAdmin"></label>
        <input asp-for="Input.IsAdmin" class="form-check-input" />
    </div>
    <h3>Permissions</h3>
    <div class="form-group">
        <label>Subject Permissions</label>
        <div class="form-check">
            <input type="checkbox" asp-for="Input.CanView" class="form-check-input" />
            <label class="form-check-label">Can View</label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Input.CanEdit" class="form-check-input" />
            <label class="form-check-label">Can Edit</label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Input.CanDelete" class="form-check-input" />
            <label class="form-check-label">Can Delete</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
