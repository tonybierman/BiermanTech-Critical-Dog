@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.Admin.SubjectRecords.EditModel

@{
    ViewData["Title"] = "Edit Subject Record";
}

<h1>Edit Subject Record</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecordVM.Id" />

            <div class="form-group">
                <label asp-for="RecordVM.SubjectId" class="control-label"></label>
                <select asp-for="RecordVM.SubjectId" class="form-control" asp-items="Model.Subjects"></select>
                <span asp-validation-for="RecordVM.SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.ObservationDefinitionId" class="control-label"></label>
                <select asp-for="RecordVM.ObservationDefinitionId" class="form-control" asp-items="Model.ObservationDefinitions"></select>
                <span asp-validation-for="RecordVM.ObservationDefinitionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.MetricTypeId" class="control-label"></label>
                <select asp-for="RecordVM.MetricTypeId" class="form-control" asp-items="Model.MetricTypes">
                    <option value="">Select Metric Type (Optional)</option>
                </select>
                <span asp-validation-for="RecordVM.MetricTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.MetricValue" class="control-label"></label>
                <input asp-for="RecordVM.MetricValue" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="RecordVM.MetricValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.Note" class="control-label"></label>
                <textarea asp-for="RecordVM.Note" class="form-control"></textarea>
                <span asp-validation-for="RecordVM.Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.RecordTime" class="control-label"></label>
                <input asp-for="RecordVM.RecordTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="RecordVM.RecordTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.CreatedBy" class="control-label"></label>
                <input asp-for="RecordVM.CreatedBy" class="form-control" />
                <span asp-validation-for="RecordVM.CreatedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecordVM.SelectedMetaTagIds" class="control-label">Meta Tags</label>
                <select asp-for="RecordVM.SelectedMetaTagIds" class="form-control" multiple asp-items="Model.MetaTags"></select>
                <span asp-validation-for="RecordVM.SelectedMetaTagIds" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable multi-select with a library like Select2 for better UX
        $(document).ready(function() {
            $('select[multiple]').select2();
        });
    </script>
}