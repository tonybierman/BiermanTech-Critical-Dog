@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.Admin.MetricTypes.EditModel

@{
    ViewData["Title"] = "Edit Metric Type";
}

<h1>Edit Metric Type</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MetricTypeVM.Id" />

            <div class="form-group">
                <label asp-for="MetricTypeVM.ObservationDefinitionId" class="control-label"></label>
                <select asp-for="MetricTypeVM.ObservationDefinitionId" class="form-control" asp-items="Model.ObservationDefinitions"></select>
                <span asp-validation-for="MetricTypeVM.ObservationDefinitionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetricTypeVM.UnitId" class="control-label"></label>
                <select asp-for="MetricTypeVM.UnitId" class="form-control" asp-items="Model.Units"></select>
                <span asp-validation-for="MetricTypeVM.UnitId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetricTypeVM.Description" class="control-label"></label>
                <textarea asp-for="MetricTypeVM.Description" class="form-control"></textarea>
                <span asp-validation-for="MetricTypeVM.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetricTypeVM.IsActive" class="control-label"></label>
                <select asp-for="MetricTypeVM.IsActive" class="form-control">
                    <option value="">Select Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="MetricTypeVM.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}