@page
@model BiermanTech.CriticalDog.Pages.Admin.ObservationDefinitions.CreateModel

@{
    ViewData["Title"] = "Create Observation Definition";
}

<h1>Create Observation Definition</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DefinitionVM.Name" class="control-label"></label>
                <input asp-for="DefinitionVM.Name" class="form-control" />
                <span asp-validation-for="DefinitionVM.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.Description" class="control-label"></label>
                <input asp-for="DefinitionVM.Description" class="form-control" />
                <span asp-validation-for="DefinitionVM.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.ObservationTypeId" class="control-label"></label>
                <select asp-for="DefinitionVM.ObservationTypeId" class="form-control" asp-items="Model.ObservationTypes"></select>
                <span asp-validation-for="DefinitionVM.ObservationTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.SelectedScientificDisciplineIds" class="control-label">Scientific Disciplines</label>
                <select asp-for="DefinitionVM.SelectedScientificDisciplineIds" class="form-control" asp-items="Model.ScientificDisciplines" multiple></select>
                <span asp-validation-for="DefinitionVM.SelectedScientificDisciplineIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.MetricTypeIds" class="control-label">Metric Types</label>
                <select asp-for="DefinitionVM.MetricTypeIds" class="form-control" asp-items="Model.MetricTypes" multiple></select>
                <span asp-validation-for="DefinitionVM.MetricTypeIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.MinimumValue" class="control-label"></label>
                <input asp-for="DefinitionVM.MinimumValue" class="form-control" type="number" step="any" />
                <span asp-validation-for="DefinitionVM.MinimumValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.MaximumValue" class="control-label"></label>
                <input asp-for="DefinitionVM.MaximumValue" class="form-control" type="number" step="any" />
                <span asp-validation-for="DefinitionVM.MaximumValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefinitionVM.IsActive" class="control-label"></label>
                <select asp-for="DefinitionVM.IsActive" class="form-control">
                    <option value="">Select Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="DefinitionVM.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('select[multiple]').select2();
        });
    </script>
}