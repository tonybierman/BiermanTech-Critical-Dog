@page "{id:int}"
@model BiermanTech.CriticalDog.Pages.Units.DeleteModel

@{
    ViewData["Title"] = "Delete Unit";
}

<h1>Delete Unit</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UnitVM.UnitName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UnitVM.UnitName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UnitVM.UnitSymbol)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UnitVM.UnitSymbol)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UnitVM.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UnitVM.Description)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UnitVM.IsActive)
        </dt>
        <dd class="col-sm-9">
            @(Model.UnitVM.IsActive.HasValue ? (Model.UnitVM.IsActive.Value ? "Active" : "Inactive") : "Not Set")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="UnitVM.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>