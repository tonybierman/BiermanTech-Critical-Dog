@page "{dogId:int}"
@model BiermanTech.CriticalDog.Pages.Dogs.Observations.CreateModel
@{
    ViewData["Title"] = "Add Observation";
}

<h1>Add Observation for @Model.Observation.DogName</h1>

<form method="post" id="observationForm">
    <input type="hidden" asp-for="Observation.DogId" />
    <input type="hidden" asp-for="Observation.IsQualitative" id="Observation_IsQualitative" />

    <div class="form-group">
        <label asp-for="Observation.ObservationDefinitionId">Observation Type</label>
        <select asp-for="Observation.ObservationDefinitionId" asp-items="Model.Observation.ObservationDefinitions" class="form-control" id="observationDefinitionId">
            <option value="">-- Select Observation --</option>
        </select>
        <span asp-validation-for="Observation.ObservationDefinitionId" class="text-danger"></span>
    </div>

    <div class="form-group" id="metricTypeGroup" style="display: none;">
        <label asp-for="Observation.MetricTypeId">Metric Type</label>
        <select asp-for="Observation.MetricTypeId" class="form-control" id="metricTypeId">
            <option value="">-- Select Unit --</option>
        </select>
        <span asp-validation-for="Observation.MetricTypeId" class="text-danger"></span>
    </div>

    <div class="form-group" id="metricValueGroup" style="display: none;">
        <label asp-for="Observation.MetricValue">Value</label>
        <input asp-for="Observation.MetricValue" class="form-control" />
        <span asp-validation-for="Observation.MetricValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observation.Note">Note</label>
        <textarea asp-for="Observation.Note" class="form-control"></textarea>
        <span asp-validation-for="Observation.Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observation.RecordTime">Record Time</label>
        <input asp-for="Observation.RecordTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Observation.RecordTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observation.SelectedMetaTagIds">Meta Tags</label>
        <select asp-for="Observation.SelectedMetaTagIds" multiple class="form-control" asp-items="Model.Observation.MetaTags"></select>
        <span asp-validation-for="Observation.SelectedMetaTagIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="saveButton">Save</button>
    <a asp-page="/Dogs/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#observationForm").on("submit", function (e) {
                console.log("Form submission triggered");
                if (!$(this).valid()) {
                    console.log("Client-side validation failed");
                    e.preventDefault();
                    return false;
                }
            });

            $("#saveButton").on("click", function (e) {
                console.log("Save button clicked");
                $("#observationForm").submit();
            });

            $("#observationDefinitionId").on("change", function () {
                var observationDefinitionId = $(this).val();
                var dogId = @Model.Observation.DogId;
                if (observationDefinitionId) {
                    $.ajax({
                        url: "/Dogs/Observations/Create/" + dogId + "?handler=UpdateObservationDetails",
                        method: "GET",
                        data: { observationDefinitionId: observationDefinitionId },
                        success: function (data) {
                            $("#Observation_IsQualitative").val(data.isQualitative);
                            if (data.isQualitative) {
                                $("#metricTypeGroup").hide();
                                $("#metricValueGroup").hide();
                                $("#metricTypeId").val("");
                                $("#Observation_MetricValue").val("");
                            } else {
                                $("#metricTypeGroup").show();
                                $("#metricValueGroup").show();
                                $("#metricTypeId").html(data.metricTypes);
                            }
                        },
                        error: function () {
                            console.log("Error loading observation details");
                        }
                    });
                } else {
                    $("#metricTypeGroup").hide();
                    $("#metricValueGroup").hide();
                    $("#metricTypeId").html('<option value="">-- Select Unit --</option>');
                    $("#Observation_MetricValue").val("");
                }
            });

            if ($("#observationDefinitionId").val()) {
                $("#observationDefinitionId").trigger("change");
            }
        });
    </script>
}