@page "{dogId:int}"
@model BiermanTech.CriticalDog.Pages.Dogs.Observations.CreateModel
@{
    ViewData["Title"] = "Add Observation";
}

<h1>Add Observation for @Model.DogName</h1>

<form method="post">
    <input type="hidden" asp-for="DogId" />

    <div class="form-group">
        <label asp-for="ObservationDefinitionId">Observation Type</label>
        <select asp-for="ObservationDefinitionId" asp-items="Model.ObservationDefinitions" class="form-control" onchange="this.form.submit()">
            <option value="">-- Select Observation --</option>
        </select>
        <span asp-validation-for="ObservationDefinitionId" class="text-danger"></span>
    </div>

    @if (Model.ObservationDefinitionId.HasValue && !Model.IsQualitative)
    {
        <div class="form-group">
            <label asp-for="MetricTypeId">Metric Type</label>
            <select asp-for="MetricTypeId" asp-items="Model.MetricTypes" class="form-control">
                <option value="">-- Select Unit --</option>
            </select>
            <span asp-validation-for="MetricTypeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MetricValue">Value</label>
            <input asp-for="MetricValue" class="form-control" />
            <span asp-validation-for="MetricValue" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <label asp-for="Note">Note</label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RecordTime">Record Time</label>
        <input asp-for="RecordTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="RecordTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Meta Tags</label>
        <select asp-for="SelectedMetaTagIds" multiple class="form-control" asp-items="Model.MetaTags"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Dogs/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}