@page
@model BiermanTech.CriticalDog.Pages.Dogs.IndexModel
@{
    ViewData["Title"] = "Dogs";
}

<h1>Dogs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Arrival Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dog in Model.Dogs)
        {
            <tr>
                <td>@dog.Name</td>
                <td>@dog.Breed</td>
                <td>@dog.Age</td>
                <td>@(dog.Sex == 0 ? "Male" : dog.Sex == 1 ? "Female" : "Unknown")</td>
                <td>@dog.ArrivalDate?.ToShortDateString()</td>
                <td>
                    <a asp-page="/Dogs/Observations/Create" asp-route-dogId="@dog.Id">Add Observation</a>
                </td>
            </tr>
        }
    </tbody>
</table>